# vim: filetype=zsh

fzf-dot-branch() {
    dotfiles rev-parse HEAD > /dev/null 2>&1 || return

    dotfiles branch --color=always --all --sort=-committerdate |
        grep -v HEAD |
        fzf --height 50% --ansi --no-multi --preview-window right:65% \
            --preview 'dotfiles log -n 50 --color=always --date=short --pretty="format:%C(auto)%cd %h%d %s" $(sed "s/.* //" <<< {})' |
        sed "s/.* //"
}
